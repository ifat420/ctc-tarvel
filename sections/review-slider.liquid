<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.css"/>
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css"/>

{{ 'review-slider.css' | asset_url | stylesheet_tag }}

<div class="review-sider">
    <div class="review-sider-con">
        <div class="slider">
            <div class="slider__title">
                <h3> {{ section.settings.review_status }} </h3>
                <div class="slider__star">
                    {% for num in (1...section.settings.star) %}
                        {% render 'icon-star' %}
                    {% endfor %}
                   
                </div>
                <p> {{ section.settings.review_result }} </p>
            </div>
    
            <!--slide-->
    
            <div class="slide">
                {% for item in section.blocks %}
                    <div class="slide__item">
                        <div class="slide__content">
                            <div class="slider__heading">
                                <h3 class="m-0 review-name" > {{ item.settings.reviewer_name }} </h3>
                                <div class="slider__star">
                                    {% for num in (1...item.settings.star) %}
                                        {% render 'icon-star' %}
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="slider__heading">
                                {% render 'icon-check' %}
                                <p class="m-0"> {{ item.settings.reviewer_name }}  </p>
                            </div>
                            <div class="text--content">
                                {{ item.settings.review }}
                            </div>
                            <p class="text--right"> {{ item.settings.review_address }} , {{ item.settings.review_time }}.</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js" integrity="sha512-XtmMtDEcNz2j7ekrtHvOVR4iwwaD6o/FUJe6+Zq+HgcCsk3kj4uSQQR8weQ2QVj1o0Pk6PwYLohm206ZzNfubg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script type="text/javascript">
        $('.slide').slick({
                arrows: true,
                slidesToShow: 3,
                slidesToScroll: 3,

                responsive: [
                    {
                        breakpoint: 1024,
                        settings: {
                            slidesToShow: 2,
                            slidesToScroll: 2,
                            arrows: true,
                        }
                    },
                    {
                        breakpoint: 768,
                        settings: {
                            slidesToShow: 1,
                            slidesToScroll: 1,
                            arrows: true,
                        }
                    }
                ]
            });
    </script>

{% schema %}
{
    "name": "Review Slider",
    "settings": [
        {
            "type": "text",
            "id": "review_status",
            "label": "Review Status",
            "default": "Excelent"
        },
        {
            "type": "number",
            "id": "star",
            "label": "Star",
            "default": 5
        },
        {
            "type": "text",
            "id": "review_result",
            "label": "Review Result",
            "default": "4.65 based on 53 view"
        }
    ],

    "blocks": [
        {
            "type": "review",
            "name": "Review Item",
            "settings": [
                {
                    "type": "text",
                    "id": "reviewer_name",
                    "label": "Reviewer Name",
                    "default": "Marry M"
                },
                {
                    "type": "textarea",
                    "id": "review",
                    "label": "Review",
                    "default": "Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text"
                },
                {
                    "type": "number",
                    "id": "star",
                    "label": "Star",
                    "default": 5
                },
                  
                {
                    "type": "text",
                    "id": "review_address",
                    "label": "Review Address",
                    "default": "Leicester, United Kingdom"
                },
                {
                    "type": "text",
                    "id": "review_time",
                    "label": "Review Time",
                    "default": "1 month ago"
                }
            ]
        }
    ],

    "presets": [
        {
            "name":"Review Slider"
        }
    ]
}
{% endschema %}