{{ 'how-it-work.css' | asset_url | stylesheet_tag }}

<div class="page-width hiwrp">
  <h1 class="htitle">{{section.settings.mtitle}}</h1>
  <div class="hiw">
    {% for list in section.blocks %}
      <div class="hwcard">
        {% if forloop.index == 1 %}
          {% render 'buy' %}
        {% elsif forloop.index == 2 %}
          {% render 'take' %}
        {% else %}
          {% render 'get-result' %}   
        {% endif %}

        <div class="hwcbody">
          <h2 class="mdtxt">{{list.settings.heading}}</h2>
          <p class="ctxt">{{list.settings.desc}}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "How It Work",
  "settings": [
    {
      "type": "text",
      "id": "mtitle",
      "label": "Main Title",
      "default": "How it Works"
    }
  ],
  "blocks": [
    {
      "type": "how-it-work",
      "name": "How It Work",
      "settings": [
        {
          "type": "text",
          "id" : "heading",
          "label" : "Heading"
        },
        {
          "type": "textarea",
          "id": "desc",
          "label": "Description"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "How It Work"
    }
  ]
}
{% endschema %}